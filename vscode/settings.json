{
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontSize": 15,
  "editor.fontFamily": "Consolas, 'DejaVu Sans Mono'",
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.horizontal.vertical": "hidden",
  "editor.autoClosingBrackets": "never",
  "editor.parameterHints": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.renderWhitespace": "all",
  "window.autoDetectColorScheme": false,
  // Add a line at 80 characters.
  "editor.rulers": [
    80
  ],
  "typescript.tsc.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "gulp.autoDetect": "off",
  "npm.autoDetect": "off",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "vscode-icons",

  // Vim
  "vim.hlsearch": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", ";"],
      "commands": [
        "workbench.action.quickOpen",
      ]
    },
    {
      "before": ["<leader>", "e"],
      "commands": [
        "workbench.action.quickOpen",
      ]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["<C-w>", "h"],
    },
    {
      "before": ["<leader>", "j"],
      "after": ["<C-w>", "j"],
    },
    {
      "before": ["<leader>", "k"],
      "after": ["<C-w>", "k"],
    },
    {
      "before": ["<leader>", "l"],
      "after": ["<C-w>", "l"],
    },
    {
      "before": ["<leader>", "f"],
      "commands": [
        "editor.action.formatSelection",
      ]
    },
    {
      "before": ["<leader>", "o"],
      "commands": [
        "workbench.action.openNextRecentlyUsedEditorInGroup",
      ]
    },
    {
      "before": ["<leader>", "r"],
      "commands": [
        "workbench.action.openRecent",
      ]
    },
    {
      "before": ["<leader>", "s"],
      "commands": [
        "C_Cpp.SwitchHeaderSource",
      ]
    },

    // code nav
    {
      "before": ["<leader>", "i", "d"],
      "commands": [
        "editor.action.goToDeclaration",
      ]
    },
    {
      "before": ["<leader>", "i", "i"],
      "commands": [
        "editor.action.goToDeclaration",
      ]
    },
    {
      "before": ["<leader>", "i", "r"],
      "commands": [
        "editor.action.referenceSearch.trigger",
      ]
    },

    // git
    {
      "before": ["<leader>", "v", "a"],
      "commands": [
        "git.stage",
      ]
    },
    {
      "before": ["<leader>", "v", "c"],
      "commands": [
        "git.commit",
      ]
    },
    {
      "before": ["<leader>", "v", "f"],
      "commands": [
        "git.pull",
      ]
    },
    {
      "before": ["<leader>", "v", "p"],
      "commands": [
        "git.push",
      ]
    },
    {
      "before": ["<leader>", "v", "s"],
      "commands": [
        "workbench.view.scm",
      ]
    },
  ],
  "workbench.statusBar.feedback.visible": false,
  "vsicons.dontShowNewVersionMessage": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.nosetestsEnabled": false,
  "vsicons.projectDetection.disableDetect": true,
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[javascript]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "extensions.ignoreRecommendations": true,
  "sundial.sunrise": "08:00",
  "sundial.sunset": "19:00",
  "workbench.preferredLightColorTheme": "ez",
  "workbench.preferredDarkColorTheme": "ez-dark",
  "workbench.colorTheme": "ez",
}
